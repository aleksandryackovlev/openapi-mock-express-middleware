env:
  es6: true
  jest: true
extends:
  - airbnb-base
  - 'plugin:@typescript-eslint/recommended'
  - 'prettier/@typescript-eslint'
  - 'plugin:prettier/recommended'
globals:
  Atomics: readonly
  SharedArrayBuffer: readonly
parser: '@typescript-eslint/parser'
parserOptions:
  ecmaVersion: 2018
  sourceType: module
settings:
  'import/resolver':
    node:
      extensions:
        - '.js'
        - '.ts'
plugins:
  - '@typescript-eslint'
